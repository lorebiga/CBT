<?xml version="1.0" encoding="UTF-8"?>
<document xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/changes/1.0.0 http://maven.apache.org/plugins/maven-changes-plugin/xsd/changes-1.0.0.xsd"
	xmlns="http://maven.apache.org/changes/1.0.0">
	<properties>
		<title>CheckboxTree Changes</title>
	</properties>
	<body>
		<!-- <release version="4.0-SNAPSHOT" date="in SVN"> <action dev="Lorenzo 
			Bigagli" type="update">POM update</action> -->
		<!-- </release> -->
		<release version="4.0-beta-3" date="TBD">
			<action dev="Lorenzo Bigagli" type="update">project deployed to the Central Repo</action>
			<action dev="Lorenzo Bigagli" type="update">POM revisited</action>
			<action dev="Lorenzo Bigagli" type="update">target upgraded to Java 1.7</action>
			<action dev="Lorenzo Bigagli" type="update">project moved to gitHub</action>
			<action dev="Lorenzo Bigagli" type="update">groupId changed to eu.essilab</action>
			<action dev="Lorenzo Bigagli" type="update">code repackaged to eu.essilab.lablib.checkboxtree</action>
			<action dev="Lorenzo Bigagli" type="update">source copyright information</action>
		</release>
		<release version="3.3" date="2012-02-24">
			<action dev="Lorenzo Bigagli" type="update">POM update</action>
			<action dev="Lorenzo Bigagli" type="fix">DefaultCheckboxTreeCellRenderer
				should be transparent (see ticket #17)</action>
		</release>
		<release version="3.2" date="2010-06-11">
			<action dev="Lorenzo Bigagli" type="update">POM update</action>
			<action dev="Fabrizio Papeschi" type="add">TreeCheckingSynchronizer
				class</action>
			<action dev="Lorenzo Bigagli" type="update">Refactored setCellRenderer
				to enforce the argument type and added a co-variant getter</action>
			<action dev="Lorenzo Bigagli" type="update">Removed link to older
				versions in website</action>
			<action dev="Lorenzo Bigagli" type="add">NullTreeCheckingModel
				singleton and refactored CheckboxTree.checkingModel to the Null
				Object pattern</action>
			<action dev="Michael Rudolf" type="fix">expandAll bugged when the
				root is not visible (see ticket #12)</action>
			<action dev="Lorenzo Bigagli" type="fix">toggling is correctly
				disabled when setEnabled(false) (see ticket #10)</action>
			<action dev="Lorenzo Bigagli" type="fix">Nimbus Look&amp;Feel (see
				ticket #6)</action>
		</release>
		<release version="3.1.1" date="2009-11-23">
			<action dev="Lorenzo Bigagli" type="update">Minor updates to POM,
				source and documentation</action>
			<action dev="Lorenzo Bigagli" type="fix">Deployment issue upon
				anonymous access (see ticket #7)</action>
		</release>
		<release version="3.1" date="2009-09-07">
			<action dev="Lorenzo Bigagli" type="update">POM and documentation
				update</action>
			<action dev="Lorenzo Bigagli" type="update">Added issue tracker
				information to the POM</action>
			<action dev="Lorenzo Bigagli" type="fix">Consumed mouse pressed
				events are skipped (and the useless 'if' on tree enabling is
				removed)</action>
			<action dev="Lorenzo Bigagli" type="add">Checking a node is
				(optionally) decoupled from selecting it (see ticket #3)</action>
			<action dev="Lorenzo Bigagli" type="update">Implementation of
				DefaultCheckboxTreeCellRenderer.isOnHotspot</action>
		</release>
		<release version="3.0.2" date="2009-03-09">
			<action dev="Jens Happe" type="fix">Patched the call to
				setTreeModel(null) in DefaultTreeCheckingModel</action>
		</release>
		<release version="3.0.1" date="2009-03-04">
			<action dev="Lorenzo Bigagli" type="update">POM upgrade</action>
			<action dev="Lorenzo Bigagli" type="fix">Recompiled for Java 5 (to
				support 32-bit applets and our Mac friends...)</action>
		</release>
		<release version="3.0" date="2009-02-02">
			<action dev="Lorenzo Bigagli" type="add">Exposed method
				isPathChecked in CheckboxTree</action>
			<action dev="Lorenzo Bigagli" type="remove">Removed deprecated methods
			</action>
			<action dev="Lorenzo Bigagli" type="update">Target platform is Java 6
				(no more tested on Java 5)</action>
			<action dev="Lorenzo Bigagli" type="update">Reengineered
				TreeCheckingEvent to properly expose
				the event source and better
				capture the event semantics (cf.
				javax.swing.event.TreeSelectionEvent)</action>
		</release>
		<release version="2.2.3" date="2008-12-18">
			<action dev="Lorenzo Bigagli" type="update">API and site documentation
			</action>
			<action dev="Lorenzo Bigagli" type="fix">Fixed management of null
				root nodes</action>
			<action dev="Lorenzo Bigagli" type="update">Deprecated dependency on
				TreeModel in
				TreeCheckingModel</action>
			<action dev="Lorenzo Bigagli" type="update">POM upgrade</action>
		</release>
		<release version="2.2.2" date="2008-09-18">
			<action dev="Enrico Boldrini" type="fix">Set tree enabled (false)
				didn't disable
				checkboxes</action>
		</release>
		<release version="2.2.1" date="2008-09-04">
			<action dev="Enrico Boldrini" type="fix">Bugfix in the spacebar
				listener</action>
			<action dev="Enrico Boldrini" type="udpate">Updated radio button
				treecell renderer</action>
		</release>
		<release version="2.2" date="2008-09-03">
			<action dev="Enrico Boldrini" type="add">Added space key listener
				for toggling the checking</action>
			<action dev="Enrico Boldrini" type="add">Added sample application
			</action>
			<action dev="Enrico Boldrini" type="add">Added single checking mode
			</action>
		</release>
		<release version="2.1" date="2008-03-26">
			<action dev="Enrico Boldrini" type="add">Added constructor for the
				TreeCheckingEvent</action>
			<action dev="Enrico Boldrini" type="add">Added two methods
				(removeCheckingPath,
				removeCheckingPaths to CheckboxTree)</action>
			<action dev="Enrico Boldrini" type="add">Added an example
				(LabelCheckboxTree)</action>
			<action dev="Lorenzo Bigagli" type="remove">Removed maven-site-plugin
				and related
				pluginRepository from POM (it worked around a bug; now it
				is ok)</action>
			<action dev="Lorenzo Bigagli" type="update">POM upgrade (to POM PIN
				1.4, etc.)</action>
		</release>
		<release version="2.0" date="2007-09-14">
			<action dev="Enrico Boldrini" type="update">Renamed CheckboxJtree to
				CheckboxTree</action>
			<action dev="Enrico Boldrini" type="add">Updated site (added the
				applet)</action>
			<action dev="Enrico Boldrini" type="update">Renamed TreeCheckingModes
			</action>
			<action dev="Enrico Boldrini" type="fix">Cleaned
				DefaultCheckboxTreeCellRenderer class</action>
			<action dev="Lorenzo Bigagli" type="update">Renamed
				CheckboxTreeCellRenderer.isOnCheckbox to
				isOnHotspot</action>
			<action dev="Enrico Boldrini" type="fix">DefaultTreeCheckingModel:
				rootPath was not updated
				after tree model changes</action>
			<action dev="Lorenzo Bigagli" type="remove">removed
				TreeCheckingModel.getTreeModelListener</action>
			<action dev="Lorenzo Bigagli" type="update"> documentation/web site
				generation improved </action>
			<action dev="Lorenzo Bigagli" type="add">
				TreeCheckingModel.get/setTreeModel </action>
			<action dev="Lorenzo Bigagli" type="update">Deprecated
				TreeCheckingModel.getTreeModelListener </action>
			<action dev="Enrico Boldrini" type="fix"> Bugfix in CheckboxTree
				toString </action>
			<action dev="Lorenzo Bigagli" type="fix"> Bugfix in
				TreeCheckingListener management </action>
		</release>
		<release version="1.3" date="2007-05-16">
			<action dev="Enrico Boldrini" type="add"> added
				DownRecursiveUpWhiteTreeCheckingMode </action>
			<action dev="Enrico Boldrini" type="update"> added documentation
			</action>
		</release>
		<release version="1.2" date="2007-05-14">
			<action dev="Enrico Boldrini" type="add"> added method
				getCheckingRoots </action>
			<action dev="Enrico Boldrini" type="update"> added documentation
			</action>
		</release>
		<release version="1.1" date="2007-04-24">
			<action dev="Enrico Boldrini" type="remove"> removed hashset for nodes
			</action>
			<action dev="Enrico Boldrini" type="update"> performance improved
			</action>
			<action dev="Enrico Boldrini" type="fix"> propagation of checks when
				nodes are inserted/removed
				according to different checking strategies
			</action>
		</release>
		<release version="1.0.2" date="2007-03-16">
			<action dev="Enrico Boldrini" type="fix"> Bugfix in HashSet init
			</action>
		</release>
		<release version="1.0.1" date="2007-03-06">
			<action dev="Enrico Boldrini" type="fix"> Bugfix in checking
				propagation when new nodes are
				inserted </action>
		</release>
		<release version="1.0" date="2007-02-06">
			<action dev="Enrico Boldrini" type="update"> Branched from lablib and
				mavenization </action>
		</release>
	</body>
</document>
